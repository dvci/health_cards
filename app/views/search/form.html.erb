<section class="hero is-small is-info">
  <div class="hero-body">
    <p class="title">
      <%= link_to :back, 'aria-label': 'Back to previous page' do %>
        <i class="fa fa-caret-left"></i>
      <% end %>
      Back
    </p>
  </div>
</section>

<section class="section">
  <div class="container">
    <% if alert %>
      <div class="notification is-danger is-light">
        <button class="delete"></button>
        <%= alert %>
      </div>
    <% end %>

    <h1 class="title">Immunization Information System Record Search</h1>
    <h2 class="subtitle">Consumer Portal</h2>

    <div class="block">
      <%= button_to 'Demo Data',
      search_form_path,
      params: {autofill: 'yes'},
      method: :get,
      class: 'button is-info is-light'
      %>
    </div>
    
    <%= form_with(model: @patient, url: search_query_url, method: :POST) do |form| %>
      <% if @patient.errors.any? %>
        <div class="notification is-danger is-light content">
          <p class="subtitle">
            <%= pluralize(patient.errors.count, "error") %> prohibited this search:
          </p>

          <ul>
            <% patient.errors.each do |error| %>
              <li><%= error.full_message %></li>
            <% end %>
          </ul>
        </div>
      <% end %>

      <div class="field">
        <%= form.label :given, 'Given Name', class: 'label-inline' %><span class="has-text-danger">*</span>
        <div class="control">
          <%= form.text_field :given, class: 'input', required: true %>
        </div>
      </div>

      <div class="field">
        <%= form.label :family, 'Family Name', class: 'label-inline' %><span class="has-text-danger">*</span>
        <div class="control">
          <%= form.text_field :family, class: 'input', required: true %>
        </div>
      </div>

      <div class="field">
        <%= form.label :second, 'Secondary Name', class: 'label' %>
        <div class="control">
          <%= form.text_field :second, class: 'input' %>
        </div>
      </div>

      <div class="field">
        <%= form.label :suffix, 'Name Suffix (i.e: Jr.)', class: 'label' %>
        <div class="control">
          <%= form.text_field :suffix, class: 'input' %>
        </div>
      </div>

      <div class="field">
        <%= form.label :birth_date, "Date of Birth", class: 'label-inline' %><span class="has-text-danger">*</span>
        <div class="control">
          <%= form.text_field :birth_date,
           class: 'input',
           required: true,
           placeholder: 'mm/dd/yyyy',
           value: format_date(@patient.birth_date),
           pattern: '^(1[0-2]|0?[1-9])/(3[01]|[12][0-9]|0?[1-9])/(?:[0-9]{2})?[0-9]{2}$',
           title: 'mm/dd/yyyy',
           oninvalid: 'this.setCustomValidity("Enter date in mm/dd/yyyy format")',
           oninput: 'this.setCustomValidity("")'
          %>
        </div>
      </div>

      <div class="field">
        <%= form.label :gender, class: 'label-inline' %><span class="has-text-danger">*</span>
        <div class="control">
          <div class="select">
            <%= form.select :gender, options_for_select(Patient::GENDERS), include_blank: true, required: true %>
          </div>
        </div>
      </div>

      <div class="field">
        <%= form.label :mother_maiden_family_name, 'Mother Maiden Family Name', class: 'label' %>
        <div class="control">
          <%= form.text_field :mother_maiden_family_name, class: 'input' %>
        </div>
      </div>

      <div class="field">
        <%= form.label :mother_maiden_given_name, 'Mother Given Name', class: 'label' %>
        <div class="control">
          <%= form.text_field :mother_maiden_given_name, class: 'input' %>
        </div>
      </div>

      <div class="field">
        <%= form.label :phone, class: "label" %>
        <%= form.phone_field :phone, 
            class: "input", 
            pattern: '^\d{3}-\d{3}-\d{4}$', 
            placeholder: 'ddd-ddd-dddd',
            oninvalid: 'this.setCustomValidity("Enter phone in ddd-ddd-dddd format")',
            oninput: 'this.setCustomValidity("")'
        %>
      </div>
      <br />
      
      <h3 class="subtitle">Address</h3>
      <div class="field">
        <%= form.label :street_line1, 'Street address, P.O Box, etc.', class: "label" %>
        <%= form.text_field :street_line1, class: "input" %>
        <%= form.label :street_line2, 'Apt, Suite, Unit, Building, Floor, etc.', class: "label" %>
        <%= form.text_field :street_line2, class: "input" %>
      </div>

      <div class="field">
        <%= form.label :city, class: "label" %>
        <%= form.text_field :city, class: "input" %>
      </div>

      <div class="field">
        <%= form.label :state, class: "label" %>
        <%= form.text_field :state, class: "input" %>
      </div>

      <div class="field">
        <%= form.label :zip_code, class: "label" %>
        <%= form.text_field :zip_code, class: "input" %>
      </div>
      <br />
      
      <h3 class="subtitle">Fill out the following if you know your registration in IIS Patient List</h3>
      <div class="field">
        <%= form.label :list_id, class: "label" %>
        <%= form.text_field :list_id, class: "input" %>
      </div>

      <div class="field">
        <%= form.label :assigning_authority, class: "label" %>
        <%= form.text_field :assigning_authority, class: "input" %>
      </div>

      <div class="field">
        <%= form.label :identifier_type_code, class: "label" %>
        <%= form.text_field :identifier_type_code, class: "input" %>
      </div>

      <div class="field is-grouped">
        <div class="control">
          <%= form.submit value: 'Search', class: 'button is-info' %>
        </div>
      </div>
    <% end %>
    
  </div>
</section>
