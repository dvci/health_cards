namespace :test do
  Rake::TestTask.new('health_cards') do |t|
    t.libs = ['lib','test']
    t.pattern = 'health_cards/**/*_spec.rb'
    t.verbose = true
  end
end

namespace :health_cards do
  desc 'irb'
  task :irb do
    require 'irb'
    binding.irb
  end
end

Rake::Task["test:run"].enhance ["test:health_cards"]